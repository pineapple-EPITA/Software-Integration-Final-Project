# Environment template - Do not put real credentials here
# Create separate files for each environment (.env.dev, .env.release, .env.pprod, .env.prod)

# Node Environment
NODE_ENV=development  # or "release" or "pprod" or "production"

# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# PostgreSQL Database
DB_USER=postgres_user
DB_PASSWORD=your_password
DB_HOST=your_host
DB_PORT=5432
DB_NAME=your_database_name

# Session Secret
SESSION_SECRET=your_session_secret

# Server Configuration
PORT=8080

# Other Configuration
LOG_LEVEL=info
API_TIMEOUT=5000 